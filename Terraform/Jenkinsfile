pipeline {
  agent any
  environment {
        INSTANCE_IP = ''
      }
     stages {
        stage('terrafrom script') {
            steps {
                withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY', credentialsId: 'AWS-1')]) {
                    sh '''
                        cd Terraform
                        pwd
                        terraform -v
                        terraform init
                        terraform plan -input=false -out tfplan
                        terraform apply -input=false tfplan
                        terraform output -raw instance_ip

                    '''

                    script {
                      INSTANCE_IP = sh(script: 'terraform output -raw instance_public_ip', returnStdout: true).trim()
                    }

                    
          }
       }
    }
  }
}
